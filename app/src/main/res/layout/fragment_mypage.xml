<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="type"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/GrayBackground"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/ic_profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/DarkGray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="김민주"
                app:layout_constraintStart_toEndOf="@id/iv_profile"
                app:layout_constraintTop_toTopOf="@id/iv_profile"
                app:layout_constraintBottom_toBottomOf="@id/iv_profile"
                style="@style/Poppins.TitleStyle"
                android:textSize="16sp"
                android:layout_marginStart="12dp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/search_background"
                android:backgroundTint="@color/GrayBackground"
                app:layout_constraintTop_toBottomOf="@id/iv_profile"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                >
                <TextView
                    android:id="@+id/tv_text_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="유형 : "
                    style="@style/Poppins.TextStyle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/iv_arrow"
                    app:layout_constraintBottom_toBottomOf="@id/iv_arrow"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#현실형"
                    style="@style/Poppins.TextStyle"
                    app:layout_constraintStart_toEndOf="@id/tv_text_type"
                    android:layout_marginStart="12dp"
                    app:layout_constraintTop_toTopOf="@id/iv_arrow"
                    app:layout_constraintBottom_toBottomOf="@id/iv_arrow"
                    />

                <ImageView
                    android:id="@+id/iv_arrow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_right_arrow"
                    app:tint="@color/DarkGray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/GrayBackground"/>

        <LinearLayout
            android:id="@+id/scrap_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="24dp"
            android:paddingStart="16dp">

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="23dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_heart_unchecked"
                    app:tint="@color/ControlHighlight" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="스크랩한 기업"
                style="@style/Poppins.TitleStyle"
                android:textSize="16.5sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/GrayBackground"/>

        <LinearLayout
            android:id="@+id/resume_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="24dp"
            android:paddingStart="16dp">

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="23dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_resume"
                    app:tint="@color/ControlHighlight" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="이력서 관리"
                style="@style/Poppins.TitleStyle"
                android:textSize="16.5sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/GrayBackground"/>

        <LinearLayout
            android:id="@+id/exam_result_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="24dp"
            android:paddingStart="16dp">

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="23dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_glass_search"
                    app:tint="@color/ControlHighlight" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="검사 결과 조회"
                style="@style/Poppins.TitleStyle"
                android:textSize="16.5sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/GrayBackground"/>

        <LinearLayout
            android:id="@+id/applied_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="24dp"
            android:paddingStart="16dp">

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="23dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_check"
                    app:tint="@color/ControlHighlight" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="지원한 기업"
                style="@style/Poppins.TitleStyle"
                android:textSize="16.5sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/GrayBackground"/>

        <LinearLayout
            android:id="@+id/finished_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="24dp"
            android:paddingStart="16dp">

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="23dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_document"
                    app:tint="@color/ControlHighlight" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="체험완료 기업"
                style="@style/Poppins.TitleStyle"
                android:textSize="16.5sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/GrayBackground"/>


    </LinearLayout>
</layout>
